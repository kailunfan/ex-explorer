{
	"name": "extra-explorer",
	"displayName": "ExtraExplorer",
	"description": "An Extra Explorer",
	"version": "0.0.1",
	"publisher": "hookbear",
	"author": {
		"name": "hookbear"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/kailunfan/ex-explorer"
	},
	"icon": "resources/icons/file-code.png",
	"engines": {
		"vscode": "^1.40.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:ex-explorer-explorer"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "ex-explorer.openfile",
				"title": "Open File"
			},
			{
				"command": "ex-explorer.deletefile",
				"title": "Delete File"
			},
			{
				"command": "ex-explorer.deletefolder",
				"title": "Delete Folder"
			},
			{
				"command": "ex-explorer.revealinexplorer",
				"title": "Reveal in explorer"
			},
			{
				"command": "ex-explorer.addfile",
				"title": "Add File",
				"icon": {
					"dark": "resources/icons/dark/add.svg",
					"light": "resources/icons/light/add.svg"
				}
			},
			{
				"command": "ex-explorer.addfolder",
				"title": "Add Folder",
				"icon": {
					"dark": "resources/icons/dark/add-folder.svg",
					"light": "resources/icons/light/add-folder.svg"
				}
			},
			{
				"command": "ex-explorer.renamefile",
				"title": "Rename File"
			},
			{
				"command": "ex-explorer.refreshConfig",
				"title": "Refresh",
				"icon": {
					"light": "resources/icons/light/refresh.svg",
					"dark": "resources/icons/dark/refresh.svg"
				}
			},
			{
				"command": "ex-explorer.openmysettings",
				"title": "Settings",
				"icon": {
					"light": "resources/icons/light/settings.svg",
					"dark": "resources/icons/dark/settings.svg"
				}
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "ex-explorer.openmysettings",
					"when": "view == ex-explorer-explorer",
					"group": "navigation"
				},
				{
					"command": "ex-explorer.refreshConfig",
					"when": "view == ex-explorer-explorer",
					"group": "navigation"
				}
			],
			"commandPalette": [],
			"view/item/context": [
				{
					"command": "ex-explorer.deletefile",
					"when": "view == ex-explorer-explorer && viewItem == ExplorerFileItem",
					"group": "navigation"
				},
				{
					"command": "ex-explorer.deletefolder",
					"when": "view == ex-explorer-explorer && viewItem == ExplorerFolderItem",
					"group": "navigation"
				},
				{
					"command": "ex-explorer.renamefile",
					"when": "view == ex-explorer-explorer && viewItem == ExplorerFileItem",
					"group": "navigation"
				},
				{
					"command": "ex-explorer.revealinexplorer",
					"when": "view == ex-explorer-explorer && viewItem == ExplorerFileItem",
					"group": "navigation"
				},
				{
					"command": "ex-explorer.revealinexplorer",
					"when": "view == ex-explorer-explorer && viewItem == ExplorerFolderItem",
					"group": "navigation"
				},
				{
					"command": "ex-explorer.addfile",
					"when": "view == ex-explorer-explorer && viewItem != ExplorerFileItem",
					"group": "inline"
				},
				{
					"command": "ex-explorer.addfolder",
					"when": "view == ex-explorer-explorer && viewItem != ExplorerFileItem",
					"group": "inline"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "ex-explorer-container",
					"title": "ex-explorer",
					"icon": "resources/icons/light/file-code-regular.svg"
				}
			]
		},
		"views": {
			"ex-explorer-container": [
				{
					"id": "ex-explorer-explorer",
					"name": "Explorer"
				}
			]
		},
		"configuration": {
			"title": "ex-explorer",
			"properties": {
				"ex-explorer.path": {
					"type": "array",
					"description": "Explorer Path ( Sample - D:/temp , ${WorkspaceName}/temp )",
					"items": {
						"type": "string"
					}
				},
				"ex-explorer.ignorePattern": {
					"type": "array",
					"description": "File / Folder Ignore Patterns ( Sample - .*bat , .*.jar$ , .*temp.* )",
					"items": {
						"type": "string"
					}
				},
				"ex-explorer.postOpenActions": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"filePattern": {
								"type": "string"
							},
							"toggleWordWrap": {
								"type": "boolean"
							},
							"scrollToBottom": {
								"type": "boolean"
							},
							"decorations": {
								"type": "array",
								"items": {
									"type": "object",
									"properties": {
										"regex": {
											"type": "string"
										},
										"backgroundColor": {
											"type": "string"
										},
										"color": {
											"type": "string"
										}
									}
								}
							}
						}
					}
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.40.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/rimraf": "2.0.2",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"@types/rimraf": "2.0.2",
		"rimraf": "^3.0.2"
	}
}